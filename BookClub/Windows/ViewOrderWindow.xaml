<Window x:Class="BookClub.Windows.ViewOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookClub.Windows"
        mc:Ignorable="d"
        Title="Книжный клуб" 
        Height="450" 
        Width="800"
        Icon="/Resources/BookIcon.ico"
        MinWidth="800"
        MinHeight="450"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--#region StackPanel for Row 1-->
        <StackPanel Orientation="Vertical"
                    Grid.Row="0"
                    Margin="30,0,0,0">
            <TextBlock Text="Книжный клуб"
                       Height="60"
                       FontSize="35"
                       FontWeight="Bold"/>
            <TextBlock Text="Просмотр заказа"
                       FontSize="20"
                       FontWeight="Bold"/>
        </StackPanel>
        <!--#endregion-->
        <TextBlock x:Name="TestTextBox"
                   Grid.Row="1"
                   FontSize="20"/>
    </Grid>
</Window>
