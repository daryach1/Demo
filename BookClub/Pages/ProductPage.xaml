<Page x:Class="BookClub.Pages.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookClub.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="Список товаров"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--#region StackPanel for Row 1-->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0">
            <Button x:Name="GenerOrderButton"
                    Click="GenerOrderButton_Click"
                    Height="40"
                    Width="100"
                    Background="{StaticResource AdditionalColor}"
                    BorderBrush="Black"
                    Margin="10,0,0,0">
                <Button.Content>
                    <TextBlock Text="Сформировать заказ"
                               TextWrapping="WrapWithOverflow"/>
                </Button.Content>
            </Button>
        </StackPanel>
        <!--#endregion-->
    </Grid>
</Page>
